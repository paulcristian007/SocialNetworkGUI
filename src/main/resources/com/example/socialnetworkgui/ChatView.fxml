<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialnetworkgui.controllers.ChatController">
   <children>
      <ListView fx:id="chatView" layoutX="50.0" layoutY="35.0" onMouseClicked="#chatViewClicked" prefHeight="264.0" prefWidth="488.0" />
      <TextField fx:id="messageField" layoutX="50.0" layoutY="327.0" prefHeight="26.0" prefWidth="395.0" />
      <Button fx:id="sendMessageButton" layoutX="471.0" layoutY="328.0" mnemonicParsing="false" onAction="#sendMessageClicked" prefHeight="26.0" prefWidth="72.0" text="Send" />
      <Button fx:id="refreshChatClicked" layoutX="50.0" layoutY="367.0" mnemonicParsing="false" onAction="#refreshChatClicked" prefHeight="26.0" prefWidth="166.0" text="Refresh Chat" />
      <Button fx:id="closeChatButton" layoutX="309.0" layoutY="367.0" mnemonicParsing="false" onAction="#closeChatClicked" prefHeight="26.0" prefWidth="139.0" text="Close Chat" />
   </children>
</AnchorPane>
